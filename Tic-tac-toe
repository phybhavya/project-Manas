#include<iostream>
using namespace std;
char space[3][3]={{'1', '2', '3'},{'4', '5', '6'},{'7', '8', '9'}};
int row;
int column;
bool tie = false;
string n1;
string n2;
char token = 'x';
void functionONE(){// this function is made to build the architecture or construct how are tic tac toe wil look like
    //cout<<"this is function1 \n";
    cout<< "  |   |  \n";
    cout<< " "<<space[0][0]<<"| "<<space[0][1]<<" | "<<space[0][2]<<" \n";
    cout<< "__|___|___  \n";
    cout<< " "<<space[1][0]<<"| "<<space[1][1]<<" | "<<space[1][2]<<" \n";
    cout<< "  |   |  \n";
    cout<< "__|___|___ \n";
    cout<< " "<<space[2][0]<<"| "<<space[2][1]<<" | "<<space[2][2]<<" \n";
    cout<< "  |   |  \n";
    cout<< "  |   |  \n";

}

void functionTwo(){

int digit;
if(token=='x')
 {
    cout<<n1<< " please enter";
    cin>>digit;
}
else if(token=='0'){
  cout<<n2<< " please enter";
    cin>>digit;
}
if (digit == 1)
{
    row=0;
    column=0;
}
if (digit == 2)
{
    row=0;
    column=1;
}
if (digit == 3)
{
    row=0;
    column=2;
}
if (digit == 4)
{
    row=1;
    column=0;
}
if (digit == 5)
{
    row=1;
    column=1;
}
if (digit == 6)
{
    row=1;
    column=2;
}
if (digit == 7)
{
    row=2;
    column=0;
}
if (digit == 8)
{
    row=2;
    column=1;
}
if (digit == 9)
{
    row=2;
    column=2;
}
else if (digit <1 && digit>9) {cout<<"INVALID!!";}


if (token=='x'&& space[row][column] != 'x' && space [row][column] != '0')
{
space[row][column] = 'x';
token = '0';
}
else if (token=='0'&& space[row][column] != 'x' && space [row][column] != '0')
{
space[row][column] = '0';
token = 'x';
}
else{cout<<"there is no empty space left /n"<<endl;
 

}
bool functionthree(){

for (int i=0;i<3; i++ )
{
    if(space[i][0]==space[i][1] && space[i][0]==space[i][2] || space[0][i]==space[1][i] && space[0][i]==space[2][i])
    {
        return true;
    }

if(space[0][0]==space[1][1] && space[0][0]==space[2][2] || space[0][2]==space[1][1] && space[0][i]==space[2][0])
    {
        return true;
    }
      for (int i=0;i<3; i++){
        for(int j=0;j<3; j++){
            if (space[i][j] != 'x' || space[i][j] != '0'){
                return false;}
                else {tie= true;
                return true;}

        }
   }
}

//tie = true;
  //{
   //return false;}
}
int main(){
    cout<< "enter name of first player: \n";
    getline(cin, n1);
    cout<< "enter name of second player: \n";
    getline(cin, n2);
    cout<<n1 <<" is the first player so he/she should start first \n";
    cout<<n2 <<" the second player so he/she should start second\n";
//for (int i=0; i<9; i++){
while (!functionthree()){
  functionONE();
  functionTwo();
  functionthree();

}
if (token == 'x' && tie== false){
   functionONE();
    cout<<n2<<" wins!!"<<endl;

}
else if (token == '0' && tie== false)
{ functionONE();
    cout<<n1<<" wins!!"<<endl;

}
else if (tie == true){
    cout<<"it is a draw";
}
}
